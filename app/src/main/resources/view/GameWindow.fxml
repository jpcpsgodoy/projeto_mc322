<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<StackPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.futquiz.controller.GameController">
    <TabPane fx:id="tabPane" visible="true">
        <tabs>
            <Tab closable="false" text="Jogo Ativo">
                <AnchorPane fx:id="jogoAtivoPane" prefHeight="400" prefWidth="600">
                    <children>
                        <ImageView fx:id="imageViewQbSorteado" fitHeight="150.0" fitWidth="200.0" layoutX="227.0"
                                   layoutY="73.0" pickOnBounds="true" preserveRatio="true"/>
                        <Label fx:id="labelNomeQbSorteado" layoutX="310.0" layoutY="234.0" text="Label"/>
                        <Button layoutX="295.0" layoutY="266.0" mnemonicParsing="false" text="Sortear"/>
                    </children>
                </AnchorPane>
            </Tab>
            <Tab closable="false" text="Jogos Recentes">
                <AnchorPane fx:id="jogosSalvosPane" prefHeight="400" prefWidth="600">
                    <Label alignment="TOP_CENTER" layoutX="237.0" layoutY="-1.0" prefHeight="35.0" prefWidth="162.0"
                           style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Histórico de Jogos"/>
                    <Label alignment="TOP_CENTER" layoutY="20.0" prefHeight="11.0" prefWidth="654.0"
                           text="Aqui estão listados alguns jogos salvos. Passe o mouse sobre a coluna de pontos para ver como os jogadores foram dispostos.">
                        <font>
                            <Font size="10.0"/>
                        </font>
                    </Label>
                    <TableView fx:id="tabelaJogosSalvos" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0"
                               AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="35.0">
                        <columns>
                            <TableColumn fx:id="colNome" editable="false" prefWidth="160.0" resizable="false"
                                         text="Nome do Jogador"/>
                            <TableColumn fx:id="colMeta" editable="false" prefWidth="89.0" resizable="false"
                                         text="Meta"/>
                            <TableColumn fx:id="colPontos" editable="false" prefWidth="107.0" resizable="false"
                                         text="Pontos Totais"/>
                            <TableColumn fx:id="colExibicao" editable="false" prefWidth="121.0" resizable="false"
                                         text="Tipo de Rodada"/>
                            <TableColumn fx:id="colStats" editable="false" prefWidth="158.0" resizable="false"
                                         text="Estatísticas"/>
                        </columns>
                    </TableView>
                </AnchorPane>
            </Tab>
        </tabs>
    </TabPane>
</StackPane>
